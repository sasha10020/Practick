<Page x:Class="FormProgLab1.CustomerMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FormProgLab1"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CustomerMenu">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="257"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="70"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button x:Name="B1" Content="Регистрация" Grid.Column="1" HorizontalAlignment="Left" Height="18" Margin="43,7,0,0" Grid.Row="1" VerticalAlignment="Top" Width="180" Click="B1_Click"/>
        <Button x:Name="B2" Content="Выход из аккаунта" Grid.Column="1" HorizontalAlignment="Left" Height="18" Margin="43,28,0,0" Grid.Row="1" VerticalAlignment="Top" Width="180" Click="B2_Click"/>
        <Button x:Name="B3" Content="Меню" Grid.Column="1" HorizontalAlignment="Left" Height="18" Margin="43,49,0,0" Grid.Row="1" VerticalAlignment="Top" Width="180" Click="B3_Click"/>

    </Grid>
</Page>
